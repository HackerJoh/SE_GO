               </styleClass>
            </Button>
            <Button fx:id="btn_exit" mnemonicParsing="false" onAction="#onExit" text="Beenden" textAlignment="CENTER" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <styleClass>
                  <String fx:value="btn" />
