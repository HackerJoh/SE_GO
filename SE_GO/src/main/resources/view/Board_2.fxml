            <Button fx:id="btn_surrender" mnemonicParsing="false" onAction="#onSurrender" text="Aufgeben" textAlignment="CENTER" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
